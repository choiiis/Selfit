<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/start_select_logo"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="right"
        android:src="@drawable/start_workout_logo"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/start_select_squats_side_iv"
                android:layout_width="260dp"
                android:layout_height="370dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/start_select_squats_side"/>

            <ImageView
                android:id="@+id/start_select_bent_row_iv"
                android:layout_width="260dp"
                android:layout_height="360dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/start_select_bent_row"/>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>